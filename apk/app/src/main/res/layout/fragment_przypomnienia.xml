<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayish"
    tools:context=".fragments.PrzypomnieniaFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/przypomnienia_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:elevation="8dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="nazwa kwiata" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/przypomnienia_name">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/przypomnienia_background"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/watering_can_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:text="Nawodnienie"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/przypomnienia_data"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/przypomnienia_background"
                android:elevation="8dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/calendar_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ostatnie podlanie"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/przypomnienia_ostatnia_data"
                android:layout_width="110dp"
                android:layout_height="0dp"
                android:background="@drawable/przypomnienia_background"
                android:elevation="8dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="04/12/2024" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:padding="2dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/przypomnienia_ustaw_godzine"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/przypomnienia_background"
                android:elevation="8dp"
                android:text="wybierz godzine"
                android:textAllCaps="false"
                android:textColor="@color/purplemagnolia"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/przypomnienia_godzina"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/przypomnienia_background"
                android:elevation="8dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="18:00" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/przypomnenia_oszacowany_czas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="#80E0E0E0"
            android:textSize="12sp"
            tools:text="Nawodnienie w dniu: 10 Maj 2024, 18:00" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/przypomnienia_przycisk"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/przypomnienia_background"
        android:text="Powiadom mnie!"
        android:textAllCaps="false"
        android:textColor="@color/purplemagnolia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/usun_alarm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/przypomnienia_background"
        android:text="usun alarm"
        android:textAllCaps="false"
        android:textColor="@color/purplemagnolia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/przypomnienia_przycisk" />" />

</androidx.constraintlayout.widget.ConstraintLayout>